<main class="row col-9 mx-auto m-0 justify-content-center align-items-center">
    

    <div class="col-lg-8">
        <h1 class="text-white col-lg-9 pe-5">
            Never loose a drug to expiry dates again with Pharmatify...
        </h1>
    </div>


    <form class="col-lg-4 p-5 login-box" method="post" action="/admin">
        <div class="logo d-flex flex-column justify-content-center">
            <img class="min mb-2" src="/img/bell.svg" alt="">
            <h2 class="text-center mb-0"><span>Login</span></h2>
        </div>
        <div class="form-box">
            <input 
                id=""
                type="text" 
                name="adminID" 
                placeholder="Admin ID"
                required
            >
        </div>
        <div class="form-box">
            <input 
                id=""
                type="password" 
                name="password" 
                placeholder="Password"
                required
            >
        </div>
        <div class="form-box col-lg-6">
            <button type="submit">Login</button>
        </div>
    </form>


</main>